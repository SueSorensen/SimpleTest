@code {
    private CesiumAssets1.ApiAssetType[] cesiumAssets1ApiAsset = Array.Empty<CesiumAssets1.ApiAssetType>();

    protected override async Task OnInitializedAsync()
    {
        cesiumAssets1ApiAsset = await HttpClient.GetFromJsonAsync<CesiumAssets1.ApiAssetType[]>("https://ocalhost:7074/api/Asset") ?? cesiumAssets1ApiAsset;
